<h1>Create an author</h1>
<%= form_tag posts_path, method: "post" do %>
    <% if @post.errors.any? %>
        <div id ="error explanation">
        <h3>There were a few errors:</h3>
            <ul>
            <% @post.errors.full_messages.each do |error| %>
                <li><%= error %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <% if @post.errors[:title].empty? %>
        <div class="field">
    <% else %>
        <div class="field with errors">
    <% end %>
        <%= label_tag "title", "Name" %>
        <%= text_field_tag "title", @post.title %>
    </div>

    <% if @post.errors[:category].empty? %>
        <div class="field">
    <% else %>
        <div class="field with errors">
    <% end %>
        <%= label_tag "category", "Category" %>
        <%= text_field_tag "category", @post.category %>
    </div>

    <% if @post.errors[:content].empty? %>
        <div class="field">
    <% else %>
        <div class="field with errors">
    <% end %>
        <%= label_tag "content", "Phone Number" %>
        <%= text_field_tag "content", @post.content %>
    </div>

    <%= submit_tag "Create Post" %>
<% end %>